<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Pool Name"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Pool Moto"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Pool Description"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				android:singleLine="false"
				android:lines="3"
				android:gravity="top"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Pool Privacy"
				/>

		<RadioGroup
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall">

			<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/marginTiny"
					android:id="@+id/radio_open_pool"
					android:textSize="@dimen/font_small"
					android:text="Open (Everyone can join and view)"
					/>

			<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/marginTiny"
					android:id="@+id/radio_private_pool"
					android:textSize="@dimen/font_small"
					android:text="Private (Only invited can join and participate)"
					/>
		</RadioGroup>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Pool Size"
				/>

		<RadioGroup
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="@dimen/marginSmall">

			<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/marginTiny"
					android:id="@+id/radio_unlimited_size"
					android:textSize="@dimen/font_small"
					android:text="Unlimited"
					android:layout_weight="1"
					/>

			<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/marginTiny"
					android:id="@+id/radio_limited_size"
					android:textSize="@dimen/font_small"
					android:text="Limited"
					android:layout_weight="1"
					/>
		</RadioGroup>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Minimum people for pool to go live"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Amount"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				android:inputType="numberDecimal"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="Select Time Frame"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginTiny"
				android:text="To"
				/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/marginSmall"
				android:inputType="numberDecimal"
				/>

	</LinearLayout>
</ScrollView>
