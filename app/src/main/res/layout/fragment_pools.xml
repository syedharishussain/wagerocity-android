<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.plego.wagerocity.android.fragments.PoolsFragment">

        <LinearLayout
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:paddingLeft="@dimen/marginMedium"
                android:paddingRight="@dimen/marginMedium"
                >

                <Button
                        android:id="@+id/button_show_my_pools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/marginSmall"
                        android:text="Show My Pools"
                        style="@style/Widget.Button.Blue"
                        android:layout_weight="1"
                        />

                <Button
                        android:id="@+id/btn_create_pool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginSmall"
                        style="@style/Widget.Button.Blue"
                        android:text="@string/title_create_pool"
                        android:layout_weight="1"
                        />

        </LinearLayout>

        <ListView
            android:id="@+id/listview_pools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

</LinearLayout>

