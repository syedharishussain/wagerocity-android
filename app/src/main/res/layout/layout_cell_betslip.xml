<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_cell_betslip_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Team Name"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textview_cell_betslip_bet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Moneyline"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_cell_betslip_bet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_cell_betslip_bet_type"
            android:text="-150"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textview_cell_betslip_team_vs_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Team A vs Team B"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_cell_betslip_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_cell_betslip_risk"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_cell_betslip_risk"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/textview_cell_betslip_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Win:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_cell_betslip_to_win"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_cell_betslip_win"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:inputType="numberDecimal" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>