<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/textView_leaderboard_cell_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/imageview_leaderboard_user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/textview_leaderboard_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haris Hussain"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textview_leaderboard_user_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win 98% | $123,400"
                android:textColor="@color/com_facebook_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button_leaderboard_user_buy_picks"
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:text="Buy Picks"
                android:background="@drawable/blue_button_small"
                android:textColor="#ffffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/button_leaderboard_follow_unfollow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="Follow"
                android:background="@drawable/blue_button_small"
                android:textColor="#ffffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            </LinearLayout>


    </LinearLayout>


</RelativeLayout>
