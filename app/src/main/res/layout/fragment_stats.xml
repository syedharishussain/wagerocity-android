<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/heading_bg"
    tools:context="com.plego.wagerocity.android.fragments.NavigationBarFragment">

    <!--android:background="@color/com_facebook_blue"-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVAILABLE"
        android:background="#00000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RANK"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="22dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/available_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/field_container_center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="35dp"
        android:text="15th Place"
        android:layout_centerHorizontal="true"
        android:id="@+id/field_stats_rank"
        android:textColor="#ffffff"
        android:textSize="7pt"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/available_field"
        android:id="@+id/field_container_left"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="$1000000"
        android:id="@+id/field_stats_available"
        android:textColor="#ffffff"
        android:textSize="7pt"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/available_field"
        android:id="@+id/field_container_right"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:text="987.00"
        android:id="@+id/field_stats_record"
        android:textColor="#ffffff"
        android:textSize="7pt"
        />
</RelativeLayout>
