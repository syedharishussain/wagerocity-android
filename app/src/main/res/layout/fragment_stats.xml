<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/heading_bg"
    tools:context="com.plego.wagerocity.android.fragments.NavigationBarFragment">

    <!--android:background="@color/com_facebook_blue"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVAILABLE"
        android:textIsSelectable="false"
        android:background="#00000000"
        android:textColor="#000000"
        android:textSize="8pt"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/field_container_left"
        android:layout_alignStart="@+id/field_container_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RANK"
        android:textIsSelectable="false"
        android:background="#00000000"
        android:textColor="#000000"
        android:textSize="8pt"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:textIsSelectable="false"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="8pt"
        android:layout_marginTop="5dp"
        android:layout_marginRight="22dp"
        android:id="@+id/editText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/available_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/field_container_center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="35dp"
        android:text="15th Place"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/field_stats_rank"
        android:textColor="#ffffff"
        android:textSize="7pt"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/available_field"
        android:id="@+id/field_container_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="$1000000"
        android:id="@+id/field_stats_available"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/field_container_left"
        android:layout_alignLeft="@+id/field_container_left"
        android:layout_alignStart="@+id/field_container_left"
        android:layout_alignRight="@id/field_container_left"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/available_field"
        android:id="@+id/field_container_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="987.00"
        android:textIsSelectable="false"
        android:id="@+id/field_stats_record"
        android:textColor="#ffffff"
        android:textSize="7pt"
        android:layout_alignTop="@+id/field_container_right"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignLeft="@id/field_container_right"
        android:gravity="center"
        />
</RelativeLayout>
